            string s;
            s = textBox1.Text;
            a = Double.Parse(s);
            s = textBox3.Text;
            b = Double.Parse(s);
            s = textBox2.Text;
            char[] cc = s.ToCharArray();
            c = cc[0];
            switch (c)
            {
                case '+':
                    result = a + b;
                    textBox4.Text = ""+result;
                    break;
                case '-':
                    result = a - b;
                    textBox4.Text = "" + result;
                    break;
                case '*':
                    result = a * b;
                    textBox4.Text = "" + result;
                    break;
                case '/':
                    result = a / b;
                    textBox4.Text = "" + result;
                    break;
                default:
                    textBox4.Text = "输入有误";
                    break;
            }
        }

