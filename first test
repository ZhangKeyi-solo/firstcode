using System;

namespace ControlCalculator
{
    class Program
    {
        static void Main(string[] args)
        {
            double a, b;
            string s1;
            char c;
            
            Console.WriteLine("请输入第一个数字：");
            s1=Console.ReadLine();
            a = Double.Parse(s1);
            Console.WriteLine("请输入运算符：");
            s1 = Console.ReadLine();
            char[] cc = s1.ToCharArray();
            c = cc[0];
            Console.WriteLine("请输入第二个数字：");
            s1 = Console.ReadLine();
            b = Double.Parse(s1);
            switch (c)
            {
                case '+':
                    Console.WriteLine("计算结果是：{0}",a + b);
                    break;
                case '-':
                    Console.WriteLine("计算结果是：{0}", a - b);
                    break;
                case '*':
                    Console.WriteLine("计算结果是：{0}", a * b);
                    break;
                case '/':
                    Console.WriteLine("计算结果是：{0}", a / b);
                    break;
                default:
                    Console.WriteLine("输入有误。");
                    break;
            }
           


        }
    }
}





